{% extends 'base.html.twig' %}

{% block title %}Profil index{% endblock %}

{% block body %}
    <h1>Profil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProfil</th>
                <th>ProfilDesc</th>
                <th>ProfilSys</th>
                <th>DateCreat</th>
                <th>UserCreat</th>
                <th>DateModif</th>
                <th>UserModif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profil in profils %}
            <tr>
                <td>{{ profil.id }}</td>
                <td>{{ profil.NomProfil }}</td>
                <td>{{ profil.ProfilDesc }}</td>
                <td>{{ profil.ProfilSys }}</td>
                <td>{{ profil.DateCreat ? profil.DateCreat|date('Y-m-d') : '' }}</td>
                <td>{{ profil.UserCreat }}</td>
                <td>{{ profil.DateModif ? profil.DateModif|date('Y-m-d') : '' }}</td>
                <td>{{ profil.UserModif }}</td>
                <td>
                    <a href="{{ path('profil_show', {'id': profil.id}) }}">show</a>
                    <a href="{{ path('profil_edit', {'id': profil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profil_new') }}">Create new</a>
{% endblock %}
